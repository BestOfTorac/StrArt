<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import javafx.collections.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<?import javafx.scene.control.*?>

<?import javafx.geometry.Insets?>
<BorderPane xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.strart.view.GestisciEventiControllerGrafico"
            stylesheets="/Styles.css">

    <top>
        <HBox alignment="CENTER" spacing="20.0" styleClass="header">
            <padding>
                <Insets top="20.0" right="20.0" bottom="20.0" left="20.0"/>
            </padding>
            <HBox alignment="CENTER_LEFT">
                <Button onAction="#goBack" styleClass="back-button">
                    <graphic>
                        <ImageView fitHeight="20.0" fitWidth="20.0">
                            <Image url="@/BackArrow.png"/>
                        </ImageView>
                    </graphic>
                </Button>
            </HBox>
            <HBox HBox.hgrow="ALWAYS" alignment="CENTER">
                <Label text="Creazione dell'evento" styleClass="title-label"/>
            </HBox>
        </HBox>
    </top>

    <center>
        <ScrollPane fitToWidth="true" fitToHeight="true" styleClass="content-pane">
            <VBox spacing="20.0" styleClass="form-container" VBox.vgrow="ALWAYS">
                <padding>
                    <Insets top="30.0" right="30.0" bottom="30.0" left="30.0"/>
                </padding>

                <VBox spacing="10.0" styleClass="form-field" VBox.vgrow="NEVER">
                    <Label text="Indirizzo" styleClass="field-label"/>
                    <TextField fx:id="indirizzoEvento" promptText="Inserisci l'indirizzo dell'evento"/>
                </VBox>

                <HBox spacing="40.0" VBox.vgrow="NEVER">
                    <VBox spacing="10.0" styleClass="form-field" HBox.hgrow="ALWAYS">
                        <Label text="Data" styleClass="field-label"/>
                        <DatePicker fx:id="dataEvento" promptText="Seleziona la data" HBox.hgrow="ALWAYS"/>
                    </VBox>

                    <VBox spacing="10.0" styleClass="form-field" HBox.hgrow="ALWAYS">
                        <Label text="Orario di inizio" styleClass="field-label"/>
                        <HBox spacing="20.0">
                            <Spinner fx:id="oraInizio" editable="true" styleClass="time-spinner" initialValue="0" max="23" min="0" HBox.hgrow="ALWAYS"/>
                            <Spinner fx:id="minutiInizio" editable="true" styleClass="time-spinner" initialValue="0" max="59" min="0" HBox.hgrow="ALWAYS"/>
                        </HBox>
                    </VBox>

                    <VBox spacing="10.0" styleClass="form-field" HBox.hgrow="ALWAYS">
                        <Label text="Orario di fine" styleClass="field-label"/>
                        <HBox spacing="20.0">
                            <Spinner fx:id="oraFine" editable="true" styleClass="time-spinner" initialValue="0" max="23" min="0" HBox.hgrow="ALWAYS"/>
                            <Spinner fx:id="minutiFine" editable="true" styleClass="time-spinner" initialValue="0" max="59" min="0" HBox.hgrow="ALWAYS"/>
                        </HBox>
                    </VBox>
                </HBox>

                <HBox spacing="20.0" VBox.vgrow="NEVER">
                    <VBox spacing="10.0" styleClass="form-field" HBox.hgrow="ALWAYS">
                        <Label text="Tipologia evento" styleClass="field-label"/>
                        <ComboBox fx:id="tipologiaEvento" promptText="Seleziona la tipologia" HBox.hgrow="ALWAYS">
                            <items>
                                <FXCollections fx:factory="observableArrayList">
                                    <String fx:value="Musicale"/>
                                    <String fx:value="Teatrale"/>
                                    <String fx:value="Comico"/>
                                </FXCollections>
                            </items>
                        </ComboBox>
                    </VBox>

                    <VBox spacing="10.0" styleClass="form-field" HBox.hgrow="ALWAYS">
                        <Label text="Memorizzazione evento" styleClass="field-label"/>
                        <ComboBox fx:id="persistenzaEvento" promptText="Seleziona dove memorizzare" HBox.hgrow="ALWAYS">
                            <items>
                                <FXCollections fx:factory="observableArrayList">
                                    <String fx:value="Database"/>
                                    <String fx:value="FileSystem"/>
                                </FXCollections>
                            </items>
                        </ComboBox>
                    </VBox>
                </HBox>

                <VBox spacing="10.0" styleClass="form-field" VBox.vgrow="ALWAYS">
                    <Label text="Descrizione evento" styleClass="field-label"/>
                    <TextArea fx:id="descrizioneEvento" promptText="Inserisci la descrizione dell'evento" wrapText="true" VBox.vgrow="ALWAYS"/>
                </VBox>

                <VBox spacing="10.0" styleClass="form-field" VBox.vgrow="NEVER">
                    <Label text="Immagine evento" styleClass="field-label"/>
                    <HBox spacing="10.0" alignment="CENTER_LEFT">
                        <Button onAction="#loadImage" text="Carica Immagine" styleClass="load-image-button"/>
                        <ImageView fx:id="immagineEvento" fitHeight="100" preserveRatio="true"/>
                    </HBox>
                </VBox>
            </VBox>
        </ScrollPane>
    </center>

    <bottom>
        <HBox alignment="CENTER">
            <Button onAction="#creaEvento" text="Crea Evento" styleClass="create-button"/>
            <padding>
                <Insets top="20.0" right="0.0" bottom="30.0" left="0.0"/>
            </padding>
        </HBox>
    </bottom>
</BorderPane>