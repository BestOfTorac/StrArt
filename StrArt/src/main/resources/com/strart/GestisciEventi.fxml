<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.Insets?>

<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>
<BorderPane xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.strart.view.GestisciEventiControllerGrafico">
    <center>
        <VBox fx:id="topControls" alignment="CENTER" spacing="10.0" BorderPane.alignment="CENTER">
           <children>

               <Button onAction="#visualizzaEventi" text="Visualizza i miei Eventi" />
               <Button onAction="#viewCreaEvento" text="Crea un evento" />

           </children>

        </VBox>
    </center>

    <bottom>
        <HBox alignment="CENTER" spacing="65.0" >
            <padding>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
            </padding>

            <ImageView fitHeight="40.0" fitWidth="40.0" pickOnBounds="true" preserveRatio="true">
                <Image url="@/ProfiloNero.png"/>
            </ImageView>

            <ImageView fitHeight="40.0" fitWidth="40.0" pickOnBounds="true" preserveRatio="true" onMouseClicked="#goHome">
                <Image url="@/MappaNera.png"/>
            </ImageView>

            <ImageView fitHeight="50.0" fitWidth="50.0" pickOnBounds="true" preserveRatio="true">
                <Image url="@/EventiRosso.png"/>
            </ImageView>
        </HBox>
    </bottom>


</BorderPane>
